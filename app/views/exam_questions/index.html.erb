<% provide(:title, 'All exam questions') %>
<h1>All exam questions</h1>

<%= form_tag(new_exam_question_path, :method => "get") do |f| %>
    <%= select_tag "subject_id", options_from_collection_for_select(@subjects, "subject_id", "subject_name", @subject_id), style: "display: inline-block; width: 200px;", onchange: "" %>
    <a href="javascript: void(0)" onclick="window.location.href='<%=exam_questions_path%>?subject_id=' + $('#subject_id').val()">Filter</a>
    <%= submit_tag "New Exam Question", class: "btn btn-large btn-primary", style: "float: right;" %>
<% end %>

<%= will_paginate @exam_questions %>

<ul class="users">
  <% @exam_questions.each do |exam_question| %>
  <li>
    <span style="width: 5%; display: inline-block; float: left;"><%= link_to "#" + exam_question.exam_question_id.to_s, exam_question_path(exam_question) %></span>
    <span style="width: 25%; display: inline-block; float: left;">&nbsp;<%= exam_question.subject.subject_name %></span>
    <span style="width: 20%; display: inline-block; float: left;"><%= exam_question.level.level_name %></span>
    <span style="width: 20%; display: inline-block; float: left;"><%= exam_question.number_correct %></span>
    <span style="width: 20%; display: inline-block; float: left;"><%= exam_question.exam_time %></span>
    <span style="width: 10%; display: inline-block; float: left;"><%= link_to "Edit", edit_exam_question_path(exam_question) %>&nbsp;&nbsp;<%= link_to "Delete", exam_question_path(exam_question), method: "delete" %></span>
  </li>
  <% end %>
</ul>

<%= will_paginate @exam_questions %>