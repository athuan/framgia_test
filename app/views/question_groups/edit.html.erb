<% provide(:title, 'Question Group') %>
<h1>Question Group</h1>

<div class="row">
  <div class="span7 offset2">
    <%= form_for(@question_group) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :question_group_name %>
        <%= f.text_field :question_group_name %>

        <%= f.submit "Update Question Group", class: "btn btn-large btn-primary", style: "margin-top: 20px;" %>
    <% end %>
  </div>
</div>